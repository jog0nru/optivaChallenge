{
  "name": "optiva-challenge",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=run nodemon --inspect=0.0.0.0 index.js",
    "test": "npm run lint && NODE_ENV=test jest --collectCoverage --silent --testPathPattern=/test/unit --maxWorkers=4 --forceExit --passWithNoTests",
    "lint": "eslint ."
  },
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>",
      "<rootDir>/test/"
    ],
    "collectCoverageFrom": [
      "<rootDir>/application/**/*.js",
      "<rootDir>/domain/**/*.js",
      "<rootDir>/infrastructure/**/*.js"
    ]
  },
  "author": "Jose Gonzalez Rubio",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^8.28.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20"
  },
  "dependencies": {
    "awilix": "^8.0.0"
  }
}
